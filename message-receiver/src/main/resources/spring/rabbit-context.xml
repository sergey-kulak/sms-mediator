<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/rabbit
           http://www.springframework.org/schema/rabbit/spring-rabbit.xsd
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:config/application.properties" />

    <rabbit:connection-factory id="connectionFactory" host="${rabbitMQ.host}" username="${rabbitMQ.user}" password="${rabbitMQ.password}" />

    <rabbit:template id="amqpTemplate" connection-factory="connectionFactory"/>

    <rabbit:fanout-exchange name="exchange" id="rabbitExchange" durable="true"/>

    <rabbit:admin connection-factory="connectionFactory"/>

    <rabbit:queue name="inboundMessagesQueue"/>

</beans>